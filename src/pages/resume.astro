---
import BaseLayout from '../layouts/BaseLayout.astro';
import { resumeData } from '../data/resume';

const { name, title, email, phone, location, summary, skills, experience, education, certifications } = resumeData;
---

<BaseLayout title="Resume - Ravi Chandu" description="Download my resume and view my professional experience.">
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-blue-50 to-cyan-50 dark:from-slate-900 dark:to-slate-800 py-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col md:flex-row items-start md:items-center justify-between gap-6">
        <div>
          <h1 class="text-4xl sm:text-5xl font-bold mb-2 text-gray-900 dark:text-white">
            {name}
          </h1>
          <p class="text-2xl text-blue-600 dark:text-cyan-400 font-semibold mb-4">
            {title}
          </p>
          <div class="flex flex-wrap gap-6 text-gray-600 dark:text-gray-400">
            <a href={`mailto:${email}`} class="hover:text-blue-600 dark:hover:text-cyan-400">
              {email}
            </a>
            <span>{phone}</span>
            <span>{location}</span>
          </div>
        </div>
        <a
          href="/Ravi-Chandu-Resume.pdf"
          download
          class="px-6 py-3 rounded-lg bg-blue-600 dark:bg-blue-600 text-white font-semibold hover:bg-blue-700 dark:hover:bg-blue-700 transition-colors whitespace-nowrap"
        >
          Download PDF
        </a>
      </div>
    </div>
  </section>

  <!-- Professional Summary -->
  <section class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12 border-b border-gray-200 dark:border-gray-800">
    <h2 class="text-2xl font-bold mb-4 text-gray-900 dark:text-white">Professional Summary</h2>
    <p class="text-gray-700 dark:text-gray-300 leading-relaxed text-lg">
      {summary}
    </p>
  </section>

  <!-- Skills Section -->
  <section class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12 border-b border-gray-200 dark:border-gray-800">
    <h2 class="text-2xl font-bold mb-8 text-gray-900 dark:text-white">Skills & Expertise</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {
        skills.map((skillGroup) => (
          <div>
            <h3 class="font-bold text-lg text-gray-900 dark:text-white mb-3">
              {skillGroup.category}
            </h3>
            <div class="flex flex-wrap gap-2">
              {skillGroup.items.map((skill) => (
                <span class="inline-block px-3 py-2 rounded-lg bg-blue-100 dark:bg-blue-900 text-blue-700 dark:text-blue-300 font-medium text-sm">
                  {skill}
                </span>
              ))}
            </div>
          </div>
        ))
      }
    </div>
  </section>

  <!-- Experience Section -->
  <section class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12 border-b border-gray-200 dark:border-gray-800">
    <h2 class="text-2xl font-bold mb-8 text-gray-900 dark:text-white">Professional Experience</h2>
    <div class="space-y-8">
      {
        experience.map((job, index) => (
          <div class="relative pl-6">
            {index !== experience.length - 1 && (
              <div class="absolute left-0 top-8 w-0.5 h-full bg-gradient-to-b from-blue-600 to-cyan-500 dark:from-cyan-500 dark:to-blue-600">
              </div>
            )}
            <div class="absolute left-[-8px] top-1 w-4 h-4 rounded-full bg-blue-600 dark:bg-cyan-500 border-4 border-white dark:border-slate-900">
            </div>
            <div>
              <h3 class="text-xl font-bold text-gray-900 dark:text-white">
                {job.role}
              </h3>
              <p class="text-lg text-blue-600 dark:text-cyan-400 font-semibold">
                {job.company}
              </p>
              <p class="text-sm text-gray-500 dark:text-gray-400 mb-3">
                {job.duration}
              </p>
              <p class="text-gray-700 dark:text-gray-300 mb-3">
                {job.description}
              </p>
              <ul class="list-disc list-inside space-y-1 text-gray-700 dark:text-gray-300">
                {job.highlights.map((highlight) => (
                  <li>{highlight}</li>
                ))}
              </ul>
            </div>
          </div>
        ))
      }
    </div>
  </section>

  <!-- Education Section -->
  <section class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12 border-b border-gray-200 dark:border-gray-800">
    <h2 class="text-2xl font-bold mb-8 text-gray-900 dark:text-white">Education</h2>
    <div class="space-y-6">
      {
        education.map((edu) => (
          <div class="border-l-4 border-blue-600 dark:border-cyan-500 pl-6">
            <h3 class="text-xl font-bold text-gray-900 dark:text-white">
              {edu.degree}
            </h3>
            <p class="text-lg text-blue-600 dark:text-cyan-400 font-semibold">
              {edu.institution}
            </p>
            <p class="text-gray-600 dark:text-gray-400">
              {edu.year} • {edu.details}
            </p>
          </div>
        ))
      }
    </div>
  </section>

  <!-- Certifications Section -->
  {
    certifications && certifications.length > 0 && (
      <section class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <h2 class="text-2xl font-bold mb-8 text-gray-900 dark:text-white">Certifications</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {certifications.map((cert) => (
            <div class="p-6 rounded-lg border border-gray-200 dark:border-gray-700 bg-gradient-to-br from-blue-50 to-cyan-50 dark:from-gray-800 dark:to-gray-900">
              <h3 class="font-bold text-lg text-gray-900 dark:text-white mb-2">
                {cert.title}
              </h3>
              <p class="text-gray-600 dark:text-gray-400">
                {cert.issuer} • {cert.year}
              </p>
            </div>
          ))}
        </div>
      </section>
    )
  }

  <!-- CTA Section -->
  <section class="relative bg-gradient-to-r from-blue-600 to-cyan-500 dark:from-blue-900 dark:to-cyan-800 text-white mt-20 overflow-hidden">
    <div class="relative max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-16 text-center">
      <h2 class="text-3xl font-bold mb-4">Interested in Working Together?</h2>
      <p class="text-xl text-blue-100 dark:text-blue-200 mb-8">
        Let's discuss how I can contribute to your projects.
      </p>
      <a
        href="mailto:ravichandu464@gmail.com"
        class="inline-block px-8 py-4 rounded-lg bg-white text-blue-600 font-semibold hover:bg-gray-100 transition-colors"
      >
        Get in Touch
      </a>
    </div>
  </section>
</BaseLayout>
